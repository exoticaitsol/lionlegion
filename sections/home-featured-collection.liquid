
 
<section class="main_coll_home">
  <div class="featured_in_title">
  <h2 class="title_h2">{{ section.settings.main_title }} </h2>
  </div>
  <div class="main_coll_home_inner">
    {% for block in section.blocks %}
    <div class="main_coll_home_box">
      <div class="main_coll_home_img">
        <a href="{{ block.settings.url_url}}"> <img src="{{ block.settings.image | img_url: '600x600' }}" alt="img"> </a>
      </div>
      <div class="main_coll_home_content">
         <h2 class="title_h3"><a href="{{ block.settings.url_url}}">{{ block.settings.title}}</a></h2>
      </div>
     </div>
     {% endfor %}       
    </div>
 
</section>

{% schema %}
  {
    "name": "Home Featured Section ",
    "settings": [ 
       {
        "type": "text",
        "id": "main_title",
        "label":"Heading"
      }
    ],
    "blocks": [
    {
      "type": "Featured_product",
      "name": "Featured_product",
      "settings": [

        {
        "type": "text",
        "id": "title",
        "label":"Heading"
      },
        
          {
        "type": "image_picker",
        "id": "image",
        "label":"image"
      },
        {
        "type": "url",
        "id": "url_url",
        "label":"URL"
      }
      ]
    }
  ],
    
     "presets": [
       {
       "name": "Home Featured Section"
       }
     ]
  }
{% endschema %}

