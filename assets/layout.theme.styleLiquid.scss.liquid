        width: 100%;
    }

    .swatch-type,
    .swatch-elements-wrapper,
    .swatch-elements-options {
        display: flex;
    }

    .swatch-elements-options {
        justify-content: flex-start;
    }

    .swatch-type,
    .swatch-elements-wrapper {
        flex-wrap: wrap;
        align-items: flex-start;
    }

    .swatch-type{
        .product-form-label {
            margin-bottom: 5px;
        }
        .swatch-elements-wrapper {
            margin-bottom: 10px;
            flex-wrap: wrap;

            .swatch-element-standard {
                position: relative;

                .swatch-variant-value {
                    display: none;
                }
            }

            .swatch-element-color {
                height: 35px;
            }

            .swatch-element {
                margin-bottom: 8px;
                margin-right: 8px;
                position: relative;

                input[type="radio"] {
                    display: none;
                }

                &.soldout {
                    opacity: 0.5;
                }

                &.swatch-disabled {
                    display: none;
                }

                & > .tooltip {
                    display: block;
                    width: 90px;
                    position: absolute;
                    visibility: hidden;
                    opacity: 0;
                    background: #757575;
                    color: #fff;
                    border: 1px solid #757575;
                    transition: ease all .2s;
                    transform: translate(-33%, 0);
                    font-size: 14px;
                    padding: 5px 0;
                    margin-bottom: 20px;
                    top: -7px;
                    text-align: center;
                    box-shadow: 0 0px 2px rgba(50,50,50,.4);
                    pointer-events: none;

                    &:before {
                        content: '';
                        border-left: 8px solid transparent;
                        border-right: 8px solid transparent;
                        border-top: 8px solid #757575;
                        position: absolute;
                        bottom: 0;
                        left: 50%;
                        transform: translate(-50%, 100%);
                    }
                }
                & > .tooltip-standard {
                    display: block;
                    width: 90px;
                    position: absolute;
                    visibility: hidden;
                    opacity: 0;
                    background: #757575;
                    color: #fff;
                    border: 1px solid #757575;
                    transition: ease all .2s;
                    transform: translate(-33%, 0);
                    font-size: 14px;
                    padding: 5px 0;
                    margin-bottom: 20px;
                    top: -7px;
                    left: 25%;
                    z-index: 1;
                    text-align: center;
                    box-shadow: 0 0px 2px rgba(50,50,50,.4);
                    pointer-events: none;
                    &:before {
                        content: '';
                        border-left: 8px solid transparent;
                        border-right: 8px solid transparent;
                        border-top: 8px solid #757575;
                        position: absolute;
                        bottom: 0;
                        left: 50%;
                        transform: translate(-50%, 100%);
                    }
                }
                .swatch-value:hover ~ .tooltip-standard {
                    transform: translate(-33%, -100%);
                    visibility: visible;
                    opacity: 1;
                }
                .swatch-value:hover ~ .tooltip {
                    transform: translate(-33%, -100%);
                    visibility: visible;
                    opacity: 1;
                }

                &:last-child {
                    margin-right: 0;
                }
            }

            &.dropdown-option {
                width: 100%;
            }
        }
    }

    .swatch-label {
        font-weight: 600;
    }

    .swatch-value {
        display: inline-flex;
        justify-content: center;
        align-content: center;
        line-height: 1.7;
        padding: 6px 10px;
        height: 100%;
        width: auto;
        cursor: pointer;
        position: relative;

        &.no-font {
            height: 40px;
            width: 40px;
        }

        &.rounded {
            border-radius: 100%;
        }
    }
}

.swatch-standard,
.swatch-style {
    .swatch-value {
        background: #ddd;
        border: 1px solid #ccc;
        color: #000;
        border-radius: 2px;
